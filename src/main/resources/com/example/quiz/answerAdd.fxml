<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.quiz.AnswerAddController">
    <children>
        <VBox prefHeight="380.0" prefWidth="590.0">
            <children>
                <HBox prefHeight="204.0" prefWidth="534.0">
                    <children>
                        <VBox prefHeight="200.0" prefWidth="155.0">
                            <children>
                                <Label text="Question">
                                    <VBox.margin>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </VBox.margin>
                                </Label>
                                <Label text="Answer Content">
                                    <VBox.margin>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </VBox.margin>
                                </Label>
                                <Label prefHeight="56.0" prefWidth="143.0" text="Correct Answer(Tick in the box if it is correct)" wrapText="true">
                                    <VBox.margin>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </VBox.margin>
                                </Label>
                            </children>
                        </VBox>
                        <VBox prefHeight="123.0" prefWidth="361.0">
                            <children>
                        <ChoiceBox fx:id="choiceBQuestionContent" prefHeight="26.0" prefWidth="350.0">
                           <VBox.margin>
                              <Insets bottom="2.0" left="10.0" right="10.0" top="10.0" />
                           </VBox.margin>
                        </ChoiceBox>
                        <TextField fx:id="txtfAnswerContent">
                           <VBox.margin>
                              <Insets bottom="2.0" left="10.0" right="10.0" top="10.0" />
                           </VBox.margin>
                        </TextField>
                        <CheckBox fx:id="checkBCorrect" mnemonicParsing="false">
                           <VBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="27.0" />
                           </VBox.margin>
                        </CheckBox>
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <HBox prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Button fx:id="btnSave" mnemonicParsing="false" onAction="#btnSaveAction" text="Save">
                            <HBox.margin>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </HBox.margin>
                        </Button>
                        <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#btnCancelAction" text="Cancel">
                            <HBox.margin>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </HBox.margin>
                        </Button>
                        <Label fx:id="label" prefHeight="100.0" prefWidth="417.0" wrapText="true" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
